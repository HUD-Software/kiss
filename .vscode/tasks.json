{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build KISS",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/build.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run KISS",
            "type": "shell",
            "command": "${workspaceFolder}/build/bin/kiss.exe",
            "args": [
                "-d",
                "${workspaceFolder}/tests/modules",
                "list"
            ],
            "dependsOn": "Build KISS",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}